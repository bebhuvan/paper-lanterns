---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';

const speeches = await getCollection('speeches');
const sortedSpeeches = speeches.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());

// Group by author
const speechesByAuthor = sortedSpeeches.reduce((acc, speech) => {
  const author = speech.data.author.name;
  if (!acc[author]) {
    acc[author] = [];
  }
  acc[author].push(speech);
  return acc;
}, {} as Record<string, typeof speeches>);

const authors = Object.keys(speechesByAuthor).sort();
---

<Layout title="Speeches - Voice from Time" description="Historic speeches that moved nations and changed the world. Powerful orations that shaped history and inspired generations.">
  <Navigation />
  
  <main class="speeches-container">
    <div class="container">
      <header class="speeches-header">
        <h1 class="speeches-title">Speeches</h1>
        <p class="speeches-description">
          Historic orations that moved nations and changed the world. These powerful speeches capture 
          pivotal moments in history when words had the power to inspire, unite, and transform humanity.
        </p>
      </header>

      <div class="speeches-stats">
        <div class="stat">
          <span class="stat-number">{speeches.length}</span>
          <span class="stat-label">Speeches</span>
        </div>
        <div class="stat">
          <span class="stat-number">{authors.length}</span>
          <span class="stat-label">Orators</span>
        </div>
        <div class="stat">
          <span class="stat-number">{new Set(speeches.map(s => s.data.date.getFullYear())).size}</span>
          <span class="stat-label">Years Covered</span>
        </div>
      </div>

      {speeches.length > 1 && (
        <div class="speeches-filters">
          <div class="filter-group">
            <label for="author-filter" class="filter-label">Speaker:</label>
            <select id="author-filter" class="filter-select">
              <option value="all">All Speakers</option>
              {authors.map(author => (
                <option value={author}>{author}</option>
              ))}
            </select>
          </div>
          
          <div class="filter-group">
            <label for="year-filter" class="filter-label">Year:</label>
            <select id="year-filter" class="filter-select">
              <option value="all">All Years</option>
              {[...new Set(speeches.map(s => s.data.date.getFullYear()))].sort((a, b) => b - a).map(year => (
                <option value={year}>{year}</option>
              ))}
            </select>
          </div>
        </div>
      )}

      <div class="speeches-grid" id="speeches-grid">
        {sortedSpeeches.map(speech => (
          <article class="speech-card" data-author={speech.data.author.name} data-year={speech.data.date.getFullYear()}>
            <div class="speech-meta">
              <time class="speech-date">
                {speech.data.date.toLocaleDateString('en-US', { 
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric'
                })}
              </time>
              <span class="speech-author">{speech.data.author.name}</span>
            </div>
            
            <h2 class="speech-title">
              <a href={`/speech/${speech.slug}`}>
                {speech.data.title}
              </a>
            </h2>
            
            <p class="speech-excerpt">{speech.data.excerpt}</p>
            
            <div class="speech-details">
              {speech.data.location && (
                <span class="speech-location">üìç {speech.data.location}</span>
              )}
              {speech.data.occasion && (
                <span class="speech-occasion">üé§ {speech.data.occasion}</span>
              )}
            </div>
            
            {speech.data.tags.length > 0 && (
              <div class="speech-tags">
                {speech.data.tags.slice(0, 4).map(tag => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
            )}
          </article>
        ))}
      </div>

      <section class="coming-soon">
        <h2 class="section-title">More Historic Speeches Coming Soon</h2>
        <p class="section-description">
          We're continuously adding more powerful orations that shaped history. Future additions will include 
          speeches by Churchill, Gandhi, Martin Luther King Jr., Susan B. Anthony, and other great orators.
        </p>
      </section>

      <footer class="speeches-footer">
        <p>All speeches are in the public domain</p>
      </footer>
    </div>
  </main>
</Layout>

<style>
  .speeches-container {
    padding: 6rem 0 4rem;
    min-height: 100vh;
  }

  .container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .speeches-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .speeches-title {
    font-family: 'EB Garamond', serif;
    font-size: 3rem;
    font-weight: 500;
    color: var(--text-primary);
    margin-bottom: 1rem;
  }

  .speeches-description {
    font-size: 1.1rem;
    color: var(--text-tertiary);
    line-height: 1.6;
    max-width: 700px;
    margin: 0 auto;
  }

  .speeches-stats {
    display: flex;
    justify-content: center;
    gap: 3rem;
    margin-bottom: 3rem;
    padding: 2rem 0;
    border-top: 1px solid var(--border-secondary);
    border-bottom: 1px solid var(--border-secondary);
  }

  .stat {
    text-align: center;
  }

  .stat-number {
    display: block;
    font-family: 'EB Garamond', serif;
    font-size: 2rem;
    font-weight: 500;
    color: var(--accent-primary);
    margin-bottom: 0.25rem;
  }

  .stat-label {
    font-size: 0.9rem;
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .speeches-filters {
    display: flex;
    justify-content: center;
    gap: 2rem;
    margin-bottom: 3rem;
    padding: 1.5rem;
    background: var(--bg-accent);
    border-radius: 12px;
    border: 1px solid var(--border-accent);
  }

  .filter-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    align-items: center;
  }

  .filter-label {
    font-size: 0.85rem;
    color: var(--text-secondary);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .filter-select {
    padding: 0.5rem 1rem;
    border: 1px solid var(--border-secondary);
    border-radius: 8px;
    background: var(--bg-primary);
    color: var(--text-primary);
    font-size: 0.9rem;
    cursor: pointer;
    transition: border-color 0.2s ease;
  }

  .filter-select:focus {
    outline: none;
    border-color: var(--accent-primary);
  }

  .speeches-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 2rem;
    margin-bottom: 4rem;
  }

  .speech-card {
    background: var(--bg-primary);
    border-radius: 12px;
    padding: 2rem;
    border: 1px solid var(--border-secondary);
    transition: all 0.3s ease;
  }

  .speech-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 25px var(--drop-shadow);
  }

  .speech-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
    font-size: 0.85rem;
    color: var(--text-muted);
  }

  .speech-date {
    color: var(--accent-secondary);
  }

  .speech-author {
    font-weight: 500;
    color: var(--text-secondary);
  }

  .speech-title {
    margin-bottom: 1rem;
  }

  .speech-title a {
    font-family: 'EB Garamond', serif;
    font-size: 1.4rem;
    font-weight: 500;
    color: var(--text-primary);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .speech-title a:hover {
    color: var(--accent-primary);
  }

  .speech-excerpt {
    color: var(--text-secondary);
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  .speech-details {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin-bottom: 1rem;
    font-size: 0.9rem;
    color: var(--text-tertiary);
  }

  .speech-location,
  .speech-occasion {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .speech-tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .tag {
    font-size: 0.75rem;
    color: var(--accent-secondary);
    background: rgba(139, 115, 85, 0.1);
    padding: 0.25rem 0.5rem;
    border-radius: 12px;
  }

  .coming-soon {
    text-align: center;
    padding: 3rem 2rem;
    background: var(--bg-accent);
    border-radius: 12px;
    margin-bottom: 4rem;
  }

  .section-title {
    font-family: 'EB Garamond', serif;
    font-size: 1.5rem;
    font-weight: 500;
    color: var(--text-primary);
    margin-bottom: 1rem;
  }

  .section-description {
    color: var(--text-tertiary);
    line-height: 1.6;
    max-width: 600px;
    margin: 0 auto;
  }

  .speeches-footer {
    text-align: center;
    padding-top: 2rem;
    border-top: 1px solid var(--border-secondary);
    color: var(--text-light);
    font-size: 0.85rem;
  }

  @media (max-width: 768px) {
    .speeches-container {
      padding: 4rem 0 2rem;
    }

    .container {
      padding: 0 1rem;
    }

    .speeches-title {
      font-size: 2.5rem;
    }

    .speeches-filters {
      flex-direction: column;
      gap: 1rem;
      padding: 1rem;
    }

    .filter-group {
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
    }

    .speeches-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .speeches-stats {
      gap: 1.5rem;
      flex-wrap: wrap;
    }

    .stat-number {
      font-size: 1.5rem;
    }

    .coming-soon {
      padding: 2rem 1rem;
    }
  }
</style>

<script>
  // Speech filtering functionality
  document.addEventListener('DOMContentLoaded', () => {
    const authorFilter = document.getElementById('author-filter') as HTMLSelectElement;
    const yearFilter = document.getElementById('year-filter') as HTMLSelectElement;
    const speechCards = document.querySelectorAll('.speech-card');

    function filterSpeeches() {
      const selectedAuthor = authorFilter?.value;
      const selectedYear = yearFilter?.value;

      speechCards.forEach(card => {
        const cardAuthor = (card as HTMLElement).dataset.author;
        const cardYear = (card as HTMLElement).dataset.year;

        const authorMatch = selectedAuthor === 'all' || cardAuthor === selectedAuthor;
        const yearMatch = selectedYear === 'all' || cardYear === selectedYear;

        if (authorMatch && yearMatch) {
          (card as HTMLElement).style.display = 'block';
        } else {
          (card as HTMLElement).style.display = 'none';
        }
      });
    }

    authorFilter?.addEventListener('change', filterSpeeches);
    yearFilter?.addEventListener('change', filterSpeeches);
  });
</script>