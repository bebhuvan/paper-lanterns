<Layout title="Paper Lanterns">
  <Navigation />

  <main>
    <section class="hero">
      <div class="hero-content">
        <h1 class="hero-title">
          <span>Words that</span>
          <span>changed</span>
          <span class="accent">hearts</span>
        </h1>
        <div class="hero-intro">
          <p class="hero-tagline">
            Timeless words from history's greatest minds. Letters, speeches, essays, and lectures
            that reveal raw moments of human vulnerability, brilliance, and connection.
          </p>
        </div>
      </div>
    </section>

    <!-- REFINED: Minimal browse navigation -->
    <nav class="main-browse">
      <a href="/letters" class="browse-link">✍ Letters</a>
      <a href="/essays" class="browse-link">◆ Essays</a>
      <a href="/speeches" class="browse-link">◉ Speeches</a>
      <a href="/lectures" class="browse-link">⋆ Lectures</a>
    </nav>

    <!-- REFINED: Elegant featured section -->
    <section class="featured">
      <div class="featured-content">
        {multipleFeatured.length > 0 && (
          <>
            <div class="featured-label">Featured</div>
            {multipleFeatured.map((item) => (
              <article class="featured-item">
                <a href={`/${item.contentType}/${item.slug}`} class="featured-link">
                  <div class="featured-meta">
                    <span class="featured-type">{item.contentType}</span>
                    <span class="featured-separator">·</span>
                    <span class="featured-year">{item.data.date.getFullYear()}</span>
                    {item.data.location && (
                      <>
                        <span class="featured-separator">·</span>
                        <span class="featured-location">{item.data.location}</span>
                      </>
                    )}
                  </div>
                  <h2 class="featured-title">{item.data.title}</h2>
                  <div class="featured-author">{item.data.author.name}</div>
                  <p class="featured-excerpt">{item.data.excerpt}</p>
                  <span class="featured-cta">Read this {item.contentType} →</span>
                </a>
              </article>
            ))}
          </>
        )}
      </div>
    </section>

    <div class="container">

      <section class="letters-section">
        <div class="letters-header">
          <div class="letters-header-left">
            <h2>Recent Additions</h2>
            <p class="letters-subtitle">The latest letters, essays, speeches, and lectures added to our collection</p>
          </div>
          <div class="letters-count">{displayContent.length} Items</div>
        </div>

        <div class="letters-grid">
          {displayContent.map((item, index) => {
            const yearsAgo = new Date().getFullYear() - item.data.date.getFullYear();
            const readTime = Math.ceil(item.body.split(/\s+/).length / 200);
            return (
              <article class="letter-card">
                <a href={`/${item.contentType}/${item.slug}`} class="letter-link">
                  <div class="card-header">
                    <span class="letter-year">{item.data.date.getFullYear()}</span>
                    <span class="meta-dot">·</span>
                    <span class="read-time">{readTime} min read</span>
                  </div>
                  <div class="card-title-row">
                    <h3>{item.data.title}</h3>
                    <span class="content-type-badge">{item.contentType}</span>
                  </div>
                  <div class="letter-author">{item.data.author.name}</div>
                  <p class="letter-excerpt">
                    {item.data.excerpt}
                  </p>
                  <div class="letter-age">Written {yearsAgo} years ago</div>
                </a>
              </article>
            );
          })}
        </div>
      </section>

    </div>

    <footer class="footer">
      <div class="footer-content">
        <div class="footer-links">
          <a href="/letters">Letters</a>
          <a href="/essays">Essays</a>
          <a href="/speeches">Speeches</a>
          <a href="/lectures">Lectures</a>
          <a href="/collections">Collections</a>
          <a href="/archive">Archive</a>
          <a href="/about">About</a>
        </div>
        <div class="footer-copy">
          © 2025 Paper Lanterns
        </div>
      </div>
    </footer>
  </main>
</Layout>

