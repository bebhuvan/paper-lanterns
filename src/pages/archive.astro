    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.75rem;
    font-size: 0.9rem;
  }

  .author-name {
    font-weight: 500;
    color: var(--text-primary);
  }

  .separator {
    color: var(--text-light);
  }

  .recipient {
    color: var(--accent-secondary);
