    color: var(--text-light);
    font-size: 0.85rem;
  }

  @media (max-width: 768px) {
    .archive-container {
      padding: 4rem 0 2rem;
    }

    .container {
      padding: 0 1rem;
    }

    .archive-title {
      font-size: 2.5rem;
    }

    .content-stats {
      gap: 2rem;
    }

