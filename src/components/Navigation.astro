---
// Navigation component for Paper Lanterns
import ThemeToggle from './ThemeToggle.astro';
---

<nav class="top-nav">
  <div class="nav-container">
    <div class="nav-left">
      <a href="/" class="logo">Paper Lanterns</a>
    </div>
    <div class="nav-right">
      <ul class="nav-links">
        <li><a href="/search">Search</a></li>
        <li><a href="/archive">Archive</a></li>
        <li><a href="/collections">Collections</a></li>
        <li><a href="/about">About</a></li>
      </ul>
      <ThemeToggle />
    </div>
  </div>
</nav>

<style>
  .top-nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    background: var(--bg-secondary);
    backdrop-filter: blur(20px);
    padding: 1.5rem 0;
    z-index: 100;
    border-bottom: 1px solid var(--border-primary);
  }

  .nav-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .nav-left {
    display: flex;
    align-items: center;
  }

  .nav-right {
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  .logo {
    font-family: 'EB Garamond', serif;
    font-size: 1.15rem;
    font-weight: 500;
    color: var(--text-primary);
    text-decoration: none;
    transition: color 0.2s ease;
    letter-spacing: -0.01em;
  }

  .logo:hover {
    color: var(--accent-primary);
  }

  .nav-links {
    display: flex;
    gap: 2rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .nav-links a {
    color: var(--text-tertiary);
    text-decoration: none;
    font-size: 0.9rem;
    font-weight: 400;
    font-family: 'Crimson Text', serif;
    letter-spacing: 0.01em;
    transition: all 0.2s ease;
    position: relative;
  }

  .nav-links a::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 1px;
    background: var(--accent-primary);
    transition: width 0.2s ease;
  }

  .nav-links a:hover {
    color: var(--text-primary);
  }

  .nav-links a:hover::after {
    width: 100%;
  }

  @media (max-width: 768px) {
    .nav-container {
      padding: 0 1rem;
    }


    .nav-links {
      gap: 1.5rem;
    }

    .nav-links a {
      font-size: 0.85rem;
    }
  }

  @media (max-width: 480px) {
    .top-nav {
      padding: 1rem 0;
    }

    .nav-container {
      flex-direction: column;
      gap: 1rem;
      padding: 0 1rem;
    }

    .nav-left {
      width: 100%;
      justify-content: center;
    }

    .logo {
      font-size: 1rem;
    }


    .nav-right {
      width: 100%;
      justify-content: center;
      gap: 1rem;
    }
    
    .nav-links {
      gap: 0.8rem;
    }

    .nav-links a {
      font-size: 0.8rem;
    }

    .random-letter-btn {
      padding: 0.5rem 0.8rem;
      font-size: 0.75rem;
    }

    .random-letter-btn span {
      display: none;
    }

    .shuffle-icon {
      width: 18px;
      height: 18px;
    }
  }
</style>

