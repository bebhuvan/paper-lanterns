---
// Navigation component for Paper Lanterns
import ThemeToggle from './ThemeToggle.astro';
---

<nav class="top-nav">
  <input type="checkbox" id="mobile-menu-toggle" class="mobile-menu-toggle" aria-label="Toggle menu">
  <div class="nav-container">
    <div class="nav-left">
      <a href="/" class="logo">Paper Lanterns</a>
      <label for="mobile-menu-toggle" class="mobile-menu-btn" aria-label="Toggle menu">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="3" y1="6" x2="21" y2="6"></line>
          <line x1="3" y1="12" x2="21" y2="12"></line>
          <line x1="3" y1="18" x2="21" y2="18"></line>
        </svg>
      </label>
    </div>
    <div class="nav-right" id="navMenu">
      <ul class="nav-links">
        <li><a href="/search">Search</a></li>
        <li><a href="/garden">Garden</a></li>
        <li><a href="/archive">Archive</a></li>
        <li><a href="/collections">Collections</a></li>
        <li><a href="/about">About</a></li>
      </ul>
      <div class="nav-actions">
        <a href="/rss.xml" class="rss-link" aria-label="RSS Feed" title="Subscribe via RSS">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M4 11a9 9 0 0 1 9 9"></path>
            <path d="M4 4a16 16 0 0 1 16 16"></path>
            <circle cx="5" cy="19" r="1"></circle>
          </svg>
        </a>
        <ThemeToggle />
      </div>
    </div>
  </div>
</nav>

<style>
  .top-nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    background: var(--bg-secondary);
    backdrop-filter: blur(20px);
    padding: 1.5rem 0;
    z-index: 100;
    border-bottom: 1px solid var(--border-primary);
  }

  .nav-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .nav-left {
    display: flex;
    align-items: center;
  }

  .nav-right {
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  .nav-actions {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .logo {
    font-family: 'EB Garamond', serif;
    font-size: 1.15rem;
    font-weight: 500;
    color: var(--text-primary);
    text-decoration: none;
    transition: color 0.2s ease;
    letter-spacing: -0.01em;
  }

  .logo:hover {
    color: var(--accent-primary);
  }

  .nav-links {
    display: flex;
    gap: 2rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .nav-links a {
    color: var(--text-tertiary);
    text-decoration: none;
    font-size: 0.9rem;
    font-weight: 400;
    font-family: 'Crimson Text', serif;
    letter-spacing: 0.01em;
    transition: all 0.2s ease;
    position: relative;
  }

  .nav-links a::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 1px;
    background: var(--accent-primary);
    transition: width 0.2s ease;
  }

  .nav-links a:hover {
    color: var(--text-primary);
  }

  .nav-links a:hover::after {
    width: 100%;
  }

  .rss-link {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    background: transparent;
    border: 1px solid var(--border-accent);
    border-radius: 50%;
    width: 38px;
    height: 38px;
    cursor: pointer;
    transition: all 0.3s ease;
    color: var(--text-tertiary);
    text-decoration: none;
  }

  .rss-link:hover {
    background: var(--bg-accent);
    border-color: var(--accent-secondary);
    color: var(--accent-primary);
  }

  .rss-link:active {
    transform: scale(0.95);
  }

  @media (max-width: 768px) {
    .nav-container {
      padding: 0 1rem;
    }

    .nav-links {
      gap: 1.5rem;
    }

    .nav-links a {
      font-size: 0.9rem; /* Increased for better readability */
      padding: 0.5rem 0; /* Add padding for better touch targets */
    }
  }

  /* Mobile menu toggle (CSS-only) */
  .mobile-menu-toggle {
    display: none;
  }

  .mobile-menu-btn {
    display: none;
    background: none;
    border: none;
    color: var(--text-primary);
    cursor: pointer;
    padding: 0.5rem;
    transition: color 0.2s ease;
  }

  .mobile-menu-btn:hover {
    color: var(--accent-primary);
  }

  @media (max-width: 480px) {
    .top-nav {
      padding: 1rem 0;
    }

    .nav-container {
      padding: 0 1rem;
    }

    .nav-left {
      display: flex;
      align-items: center;
      justify-content: space-between;
      width: 100%;
    }

    .logo {
      font-size: 1.1rem; /* Slightly larger for brand visibility */
    }

    .mobile-menu-btn {
      display: block;
    }

    .nav-right {
      display: none; /* Will be shown via JS toggle */
      position: absolute;
      top: 100%;
      left: 0;
      right: 0;
      background: var(--bg-secondary);
      border-bottom: 1px solid var(--border-primary);
      padding: 1rem;
      backdrop-filter: blur(20px);
    }

    /* Show menu when checkbox is checked */
    .mobile-menu-toggle:checked ~ .nav-container .nav-right {
      display: flex !important;
      flex-direction: column;
      gap: 1.5rem;
    }

    .nav-links {
      flex-direction: column;
      gap: 0;
      width: 100%;
    }

    .nav-links li {
      width: 100%;
    }

    .nav-links a {
      font-size: 1rem; /* Larger for mobile */
      padding: 0.75rem 1rem;
      display: block;
      width: 100%;
      border-bottom: 1px solid var(--border-secondary);
    }

    .nav-actions {
      width: 100%;
      justify-content: center;
      padding-top: 0.5rem;
    }

    .rss-link {
      width: 34px;
      height: 34px;
    }

    .rss-link svg {
      width: 18px;
      height: 18px;
    }

    .random-letter-btn {
      padding: 0.5rem 0.8rem;
      font-size: 0.75rem;
    }

    .random-letter-btn span {
      display: none;
    }

    .shuffle-icon {
      width: 18px;
      height: 18px;
    }
  }
</style>
