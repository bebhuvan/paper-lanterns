---
/**
 * ContentCard - Reusable card component for displaying content items
 * Used in: homepage, archive, category pages, related content sections
 */

import type { ContentItem } from '../lib/types';
import { calculateReadingTime } from '../lib/content';
import { CONTENT_TYPE_LABELS } from '../lib/constants';

interface Props {
  item: ContentItem;
  variant?: 'default' | 'featured' | 'compact';
  showExcerpt?: boolean;
}

const { item, variant = 'default', showExcerpt = true } = Astro.props;

const readTime = calculateReadingTime(item.body);
const yearsAgo = new Date().getFullYear() - item.data.date.getFullYear();
const contentLabel = CONTENT_TYPE_LABELS[item.contentType];
---

<article class={`content-card content-card--${variant}`} data-type={item.contentType}>
  <a href={`/${item.contentType}/${item.slug}`} class="card-link">
    <div class="card-header">
      <span class="content-type-badge">{contentLabel}</span>
      <span class="card-year">{item.data.date.getFullYear()}</span>
    </div>

    <h3 class="card-title">{item.data.title}</h3>

    <div class="card-author">{item.data.author.name}</div>

    {showExcerpt && variant !== 'compact' && (
      <p class="card-excerpt">{item.data.excerpt}</p>
    )}

    <div class="card-meta">
      <span class="read-time">{readTime} min read</span>
      <span class="meta-separator">Â·</span>
      <span class="years-ago">{yearsAgo} years ago</span>
    </div>
  </a>
</article>

<style>
  .content-card {
    position: relative;
    display: block;
    transition: all 0.2s ease;
  }

  .card-link {
    display: block;
    padding: 2rem;
    background: var(--bg-secondary);
    border: 1px solid var(--border-primary);
    border-radius: 2px;
    text-decoration: none;
    color: inherit;
    height: 100%;
    transition: all 0.2s ease;
  }

  .card-link:hover {
    transform: translateY(-2px);
    border-left-color: var(--accent-primary);
    border-left-width: 2px;
  }

  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.25rem;
  }

  .content-type-badge {
    font-size: 0.625rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    color: var(--accent-primary);
    padding: 0.25rem 0.625rem;
    background: var(--bg-accent);
    border-radius: 2px;
    opacity: 0.7;
    font-family: 'Inter', -apple-system, sans-serif;
  }

  .card-year {
    font-size: 0.875rem;
    font-weight: 400;
    color: var(--text-muted);
    font-family: 'Inter', -apple-system, sans-serif;
  }

  .card-title {
    font-size: 1.25rem;
    font-weight: 400;
    line-height: 1.35;
    letter-spacing: -0.015em;
    color: var(--text-primary);
    margin-bottom: 0.75rem;
  }

  .card-author {
    font-size: 0.875rem;
    color: var(--text-secondary);
    font-weight: 500;
    letter-spacing: 0.01em;
    margin-bottom: 1rem;
  }

  .card-excerpt {
    font-size: 0.9375rem;
    line-height: 1.65;
    color: var(--text-tertiary);
    margin-bottom: 1.25rem;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .card-meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.75rem;
    color: var(--text-muted);
    font-family: 'Inter', -apple-system, sans-serif;
  }

  .meta-separator {
    color: var(--border-subtle);
  }

  /* Featured variant */
  .content-card--featured .card-link {
    padding: 2.5rem;
    border-left: 2px solid var(--accent-primary);
  }

  .content-card--featured .card-title {
    font-size: 1.5rem;
  }

  /* Compact variant */
  .content-card--compact .card-link {
    padding: 1.5rem;
  }

  .content-card--compact .card-title {
    font-size: 1.125rem;
  }

  .content-card--compact .card-excerpt {
    -webkit-line-clamp: 2;
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .card-link {
      padding: 1.5rem;
    }

    .card-title {
      font-size: 1.125rem;
    }

    .content-card--featured .card-link {
      padding: 1.75rem;
    }

    .content-card--featured .card-title {
      font-size: 1.25rem;
    }
  }

  @media (max-width: 480px) {
    .card-link {
      padding: 1.25rem;
    }

    .card-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }
  }
</style>
