---
/**
 * TagList - Display tags with links
 * Used in: article detail pages
 */

interface Props {
  tags: string[];
  variant?: 'default' | 'compact';
}

const { tags, variant = 'default' } = Astro.props;
---

{tags && tags.length > 0 && (
  <div class={`tag-list tag-list--${variant}`}>
    <h3 id="topics-heading">Topics</h3>
    <nav class="tags" aria-labelledby="topics-heading">
      {tags.map(tag => (
        <a href={`/archive?tag=${encodeURIComponent(tag)}`} class="tag" aria-label={`View all content tagged with ${tag}`}>{tag}</a>
      ))}
    </nav>
  </div>
)}

<style>
  .tag-list {
    margin: 8vh 0 6vh;
    padding: 3rem 0;
    max-width: 780px;
    margin-left: auto;
    margin-right: auto;
    text-align: center;
    border-top: 1px solid var(--border-primary);
  }

  .tag-list h3 {
    font-size: 0.5625rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: var(--text-light);
    margin-bottom: 2rem;
    font-family: 'Inter', -apple-system, sans-serif;
  }

  .tags {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
  }

  .tag {
    display: inline-block;
    padding: 0.5rem 1rem;
    background: var(--bg-secondary);
    color: var(--text-secondary);
    text-decoration: none;
    font-size: 0.8125rem;
    border: 1px solid var(--border-secondary);
    border-radius: 2px;
    font-weight: 400;
    letter-spacing: 0.01em;
    transition: all 0.2s ease;
  }

  .tag:hover {
    color: var(--text-primary);
    border-color: var(--border-accent);
    transform: translateY(-1px);
  }

  /* Compact variant */
  .tag-list--compact {
    margin: 4vh 0 3vh;
    padding: 2rem 0;
  }

  .tag-list--compact h3 {
    margin-bottom: 1.5rem;
  }

  .tag-list--compact .tags {
    gap: 0.5rem;
  }

  .tag-list--compact .tag {
    font-size: 0.75rem;
    padding: 0.4rem 0.8rem;
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .tag-list {
      margin: 6vh 0 4vh;
      padding: 2rem 0;
    }

    .tags {
      gap: 0.5rem;
    }

    .tag {
      font-size: 0.8rem;
      padding: 0.4rem 0.8rem;
    }
  }
</style>
