---
/**
 * RelatedContent - Display related content items
 * Used in: article detail pages
 */

import type { ContentItem } from '../lib/types';
import ContentCard from './ContentCard.astro';

interface Props {
  items: ContentItem[];
  title?: string;
}

const { items, title = 'Related Content' } = Astro.props;
---

{items.length > 0 && (
  <section class="related-content" aria-labelledby="related-heading">
    <h2 id="related-heading" class="related-title">{title}</h2>
    <div class="related-grid" role="list">
      {items.map(item => (
        <div role="listitem">
          <ContentCard item={item} variant="compact" showExcerpt={false} />
        </div>
      ))}
    </div>
  </section>
)}

<style>
  .related-content {
    margin: 12vh 0 10vh;
    padding: 6vh 0;
    border-top: 1px solid var(--border-primary);
  }

  .related-title {
    font-size: clamp(1.75rem, 3.5vw, 2.25rem);
    font-weight: 300;
    letter-spacing: -0.02em;
    color: var(--text-primary);
    margin-bottom: 1rem;
    text-align: center;
  }

  .related-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-top: 5rem;
  }

  @media (max-width: 1024px) {
    .related-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
  }

  @media (max-width: 768px) {
    .related-content {
      margin: 8vh 0 6vh;
      padding: 4vh 0;
    }

    .related-grid {
      margin-top: 3rem;
    }
  }
</style>
